<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.0/font/bootstrap-icons.css">
    <style>
        .container{
            max-width: 1600px;
        }
    </style>
    <title>Document</title>
</head>
<header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark p-2">
        
        <a class="navbar-brand">SISTEMA CULTIVO HIDROPONICO</a>
        <div class="collapse navbar-collapse" id="navbarNav">
          <div class="collapse navbar-collapse">
            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link active" href="#">Monitoreo</a>
              </li>
              <li class="nav-item">
                <a class="nav-link active" href="cultivo">Cultivos</a>
              </li>
              <li class="nav-item">
                <a class="nav-link active" href="tipoHortaliza">Tipos Hortalizas</a>
              </li>
              
            </ul>
          </div>
          <ul class="navbar-nav ms-auto">
              
              <li class="nav-item">
                <a class="nav-link" href="/login">Ingresar</a>
              </li>
              
            
          </ul>
        
      </div>
    </nav>
</header>
<body>
    <br>
    <br>
    <br>
    <div class="container">
        <h2>Listado de Cultivos</h2>
        <br>
        <br>
        <div class="row">
          <div class="col-md-18">
                <a type="button" class="btnAgregarCultivo btn btn-success bi bi-plus-circle"> Agregar Nuevo Cultivo</a>
                
                <br>
                <br>
                <table id="tablaCultivo" class="table table-dark table-striped">
                    <thead>
                        <tr>
                            <th style="display: none;">Id</th>
                            <th>Lote</th>
                            <th>Cantidad</th>
                            <th>Fecha de Inicio</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% cultivos.forEach((cultivo) =>{ %>
                            <tr>
                                <td style="display: none;"><%= cultivo._id %></td>
                                <td><%= cultivo.lote %></td>
                                <td><%= cultivo.cantidad %></td>
                                <td><%= cultivo.fechaInicio %></td>

                                <td>
                                    <a type="button" class="btnEditarCultivo btn btn-outline-warning bi bi-pencil"></a>
                                    <a href="/borrarCultivo/<%= cultivo.id %>" class="btn btn-outline-danger bi bi-trash"></a>
                                </td>
                            </tr>
                            <%}) %>
                    </tbody>

                </table>

            </div>
        </div>
    </div>

    <div id="modalEditarCultivo" class="modal fade" tabindex="-1" aria-labelledby="modalEditarCultivo" aria-hidden="true">
        <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-warning text-white">
            <h5 class="modal-title" id="exampleModalLabel">Editar Cultivo</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
            <form action="/editarCultivo" method="POST">
                <input name="id_editar" id="id_editar" type="text" hidden>
                <div class="mb-3">
                    <label for="lote_editar" class="col-form-label">Lote:</label>
                    <input id="lote_editar" name="lote_editar" type="text" class="form-control" value="" required>
                </div>
                <div class="mb-3">
                    <label for="cantidad_editar" class="col-form-label">Cantidad plantada:</label>
                    <input id="cantidad_editar" name="cantidad_editar" type="number" class="form-control" required>
                </div>
                <div class="mb-3">
                    <label for="fechaInicio_editar" class="col-form-label">Fecha de Cultivo:</label><br>
                    <input type="datetime-local" id="fechaInicio_editar" name="fechaInicio_editar" value="2022-06-12T19:30" min="2018-06-07T00:00" max="2030-06-14T00:00">
                </div>
                
            
            </div>
            <div class="modal-footer">              
            <button type="submit" class="btn btn-warning">Actualizar</button>
            </div>
        </form>
        </div>
        </div>
    </div>
    <div id="modalAgregarCultivo" class="modal fade" tabindex="-1" aria-labelledby="modalAgregarCultivo" aria-hidden="true">
        <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
            <h5 class="modal-title" id="exampleModalLabel">Agregar Nuevo Cultivo</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
            <form action="/crearCultivo" method="POST">
                <div class="mb-3">
                    <label for="lote" class="col-form-label">Lote:</label>
                    <input id="lote" name="lote" type="text" class="form-control" required>
                </div>
                <div class="mb-3">
                    <label for="cantidad" class="col-form-label">Cantidad plantada:</label>
                    <input id="cantidad" name="cantidad" type="number" class="form-control" required>
                </div>
                <div class="mb-3">
                    <label for="fechaInicio" class="col-form-label">Fecha de Cultivo:</label><br>
                    <input type="datetime-local" id="fechaInicio" name="fechaInicio" value="2022-06-12T19:30" min="2018-06-07T00:00" max="2030-06-14T00:00">
                </div>
                
                
                   
                
            
            </div>
            <div class="modal-footer">              
            <button type="submit" class="btn btn-success">Agregar</button>
            </div>
        </form>
        </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous"></script>
    <script src="js/codeCultivo.js"></script>
</body>

</html>